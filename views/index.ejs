<%- include('header.ejs'); %>
<div class="page-content">

    <div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
        <div>
            <h4 class="mb-3 mb-md-0">Welcome to Dashboard</h4>
        </div>

    </div>

    <div class="row">
        <div class="col-12 col-xl-12 stretch-card">
            <div class="row flex-grow">
                <div class="col-md-3 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="row d-flex align-items-center dashboard_grid">
                                <div class="col-6 col-md-8 col-xl-8">
                                    <h6 class="card-title mb-2">Total User</h6>
                                    <h3 class="mb-"><%=total_user %></h3>
                                </div>
                                <div class="col-6 col-md-4 col-xl-4">
                                    <i data-feather="users"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-baseline">
                                <h6 class="card-title mb-2">Total Paid User</h6>
                            </div>
                            <div class="row justify-content-between">
                                <div class="col-4 col-md-4 col-xl-4">
                                    <h3 class="mb-2"><%=total_paid %></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-baseline">
                                <h6 class="card-title mb-2">Total Unpaid User</h6>
                            </div>
                            <div class="row justify-content-between">
                                <div class="col-4 col-md-4 col-xl-4">
                                    <h3 class="mb-2"><%=total_unpaid %></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-baseline">
                                <h6 class="card-title mb-2">Total Earning</h6>
                            </div>
                            <div class="row justify-content-between">
                                <div class="col-4 col-md-4 col-xl-4">
                                    <h3 class="mb-2"><%=earning %></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- row -->

    <div class="row">
        <div class="col-12 col-xl-12 grid-margin stretch-card">
            <div class="card overflow-hidden">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-baseline mb-4 mb-md-3">
                        <h6 class="card-title mb-0">Chart Day</h6>

                    </div>
